<resources xmlns:tools="http://schemas.android.com/tools">
  <attr format="color" name="secondaryButtonColor"/>
  <attr format="color" name="cancelButtonColor"/>

  <!-- Base application theme. -->
  <style name="Theme.Carry" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/purple_500</item>
    <item name="colorPrimaryVariant">@color/purple_700</item>
    <item name="colorOnPrimary">@color/white</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/teal_200</item>
    <item name="colorSecondaryVariant">@color/teal_700</item>
    <item name="colorOnSecondary">@color/black</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

    <item name="colorSurface">@color/white</item>
    <item name="colorSurfaceVariant">@color/lightish</item>
    <item name="colorOnSurface">@color/black</item>
    <item name="colorOnSurfaceVariant">@color/darker</item>

    <item name="secondaryButtonColor">@color/darkish</item>
    <item name="cancelButtonColor">@color/red</item>
  </style>

  <style name="Theme.Carry.FloatingActionButton" parent="@style/Widget.MaterialComponents.FloatingActionButton">
    <item name="android:backgroundTint">@color/teal_700</item>
    <item name="tint">@color/white</item>
  </style>

  <style name="Theme.Carry.OutlinedBox" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
    <item name="android:textColorHint">@color/light_input_hint</item>
  </style>

  <style name="Theme.Carry.Toolbar">
    <item name="colorControlNormal">@color/white</item>
  </style>
</resources>